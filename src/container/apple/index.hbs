<div class="page">
   <div class="head">
        {{#with header}}
          <header class="header-content">
            <div class="head-menu">
              <img src="/svg/apple.svg" alt="Apple" class="header-icon">
              <nav class="head-menu">
                {{#each links}}
                   <a href="{{url}}" class="header-link">{{text}}</a>
                {{/each}}
              </nav>
            </div>
            <div class="head-menu">
               <img src="/svg/search.svg" alt="Apple" class="header-icon">
               <img src="/svg/profile.svg" alt="Apple" class="header-icon">
            </div>
          </header>
        {{/with}}
    </div>
    <div class="white">
        <div class="block">
          {{#with header}}
              {{#with ad}}
                <span class="block-title">{{title}}</span>
                {{#with link}}
                    <a href="{{url}}" class="product-link adaptive cursor adaptive">{{text}}</a>
                {{/with}}
              {{/with}}
          {{/with}}
        </div>
    </div>
    {{#with iphone_pro}}
        <section class="product product-big product-iphone product-dark product-top">
          <div class="product-content">
            <h1 class="product-title">{{title}}</h1>
            <p class="product-description">{{descriptions}}</p>
            <div class="product-action">
              {{#with link}}
               {{#each text}}
                   <a href="{{../link}}" class="product-link">{{this}}</a>
               {{/each}}
              {{/with}}
            </div>
          </div>
        </section>
    {{/with}}
